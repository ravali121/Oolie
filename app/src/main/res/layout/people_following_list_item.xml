<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
<ImageView
    android:id="@+id/iv_following_profile"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_person_outline_black_24dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Username"
    android:layout_alignParentTop="true"
    android:layout_toEndOf="@+id/iv_following_profile"
    android:layout_marginStart="17dp"
    android:id="@+id/tv_following_name" />

    <TextView
        android:id="@+id/tv_gradlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_following_name"
        android:layout_below="@+id/tv_following_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_gradlevel"
        android:layout_below="@+id/tv_gradlevel"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        app:srcCompat="@drawable/ic_chat_black_24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>